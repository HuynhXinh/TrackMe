<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/all_size_48dp</item>
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">@dimen/padding_16dp</item>
        <item name="android:paddingStart">@dimen/padding_16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="Button.Green" parent="Button">
        <item name="android:background">@drawable/bg_button_green_corner_selector</item>
    </style>

    <style name="Button.Gray" parent="Button">
        <item name="android:background">@drawable/bg_button_gray_corner</item>
    </style>

</resources>